# Variables para establecer la política de reinicio de los contenedores (valor por defecto: always)
#APP_RESTART_POLICY=
#WEBSERVER_RESTART_POLICY=
#DB_RESTART_POLICY=

# Variables para especificar el nombre de la red de Docker y si ésta red es externa
#DOCKER_NETWORK_NAME=
#DOCKER_NETWORK_EXTERNAL=

# Variables para configurar zona horaria y locale
#TZ=UTC
#LOCALE=en_US.UTF-8

# ---------------------------------------------------------------------------
# SSL / Let's Encrypt
# ---------------------------------------------------------------------------
# Nombre del servidor (dominio completo). Ejemplo: myapp.example.com
# IMPORTANTE: Este valor debe coincidir con el DNS configurado
SERVER_NAME=localhost

# Email para notificaciones de Let's Encrypt (vencimiento de certificados)
CERTBOT_EMAIL=admin@example.com

# Puertos del servidor web
#WEBSERVER_PORT=80
#WEBSERVER_SSL_PORT=443

# ---------------------------------------------------------------------------
# Base de Datos PostgreSQL
# ---------------------------------------------------------------------------
# Estas variables son OBLIGATORIAS
DB_DATABASE=
DB_USERNAME=
DB_PASSWORD=

# Puerto de redirección de la base de datos (solo para acceso externo/desarrollo)
#FORWARD_DB_PORT=5432

# ---------------------------------------------------------------------------
# Puertos de Aplicación
# ---------------------------------------------------------------------------
# Puerto PHP-FPM
#PHP_FORWARD_PORT=9000

# Puerto de Laravel Reverb (WebSockets)
#REVERB_FORWARD_PORT=8080
